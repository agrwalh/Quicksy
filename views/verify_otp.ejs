<%- include('./partials/header', { cartCount: 0, categories: categories || [], user: null }) %>
<div class="flex flex-col items-center justify-center min-h-[60vh] bg-gradient-to-br from-green-50 via-white to-pink-50">
  <div class="bg-white p-8 rounded-2xl shadow-xl max-w-md w-full text-center border-t-8 border-green-500">
    <h2 class="text-2xl font-bold mb-4 text-green-700">Verify OTP</h2>
    <p class="mb-4 text-gray-600">Enter the 4-digit OTP sent to your email address.</p>
    <form action="/users/verify-otp" method="POST" class="space-y-4 text-left">
      <div>
        <label class="block text-gray-700 font-semibold mb-1">OTP</label>
        <input type="text" name="otp" maxlength="4" pattern="\d{4}" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400" placeholder="Enter 4-digit OTP" required>
      </div>
      <input type="hidden" name="email" value="<%= email %>">
      <button type="submit" class="w-full bg-green-600 text-white font-bold py-2 rounded-xl shadow-lg hover:bg-green-700 transition text-lg mt-2">Verify OTP</button>
    </form>
  </div>
</div>
<%- include('./partials/footer') %> 