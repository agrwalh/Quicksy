<%- include('./partials/header'); %>

<div class="flex items-center justify-center min-h-[70vh] bg-gray-50">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-10 border border-gray-100">
    <div class="flex flex-col items-center mb-6">
      <img src="/images/quicksy.jpg" alt="Quicksy Logo" class="h-14 w-14 rounded-full mb-2 shadow">
      <h2 class="text-3xl font-bold text-green-700 mb-1">Admin Login</h2>
      <p class="text-gray-500 text-sm">Sign in to manage Quicksy as admin</p>
    </div>
    <form autocomplete="off" class="space-y-6" action="/admin/login" method="POST">
      <div class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
          <input id="email" name="email" type="email" required
            class="block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-400 focus:border-green-500 text-gray-900 placeholder-gray-400"
            placeholder="admin@example.com">
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input id="password" name="password" type="password" required
            class="block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-green-400 focus:border-green-500 text-gray-900 placeholder-gray-400"
            placeholder="Password">
        </div>
      </div>
      <div class="flex items-center justify-between">
        <a href="#" class="text-sm text-green-700 hover:underline">Forgot your password?</a>
      </div>
      <button type="submit"
        class="w-full py-2 px-4 rounded-lg bg-green-700 hover:bg-green-800 text-white font-semibold text-lg shadow focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 transition">
        Sign in
      </button>
    </form>
  </div>
</div>

<%- include('./partials/footer'); %>