<%- include('./partials/header', { cartCount: cartCount, categories: categories, user: user }) %>
<div class="flex flex-col items-center justify-center min-h-[60vh] bg-gradient-to-br from-green-100 via-yellow-50 to-pink-100">
  <div class="bg-white p-8 rounded-2xl shadow-xl max-w-md w-full text-center border-t-8 border-green-500">
    <h2 class="text-3xl font-extrabold mb-4 text-green-700 tracking-tight">Choose or Add Delivery Address</h2>
    <% if (user && user.addresses && user.addresses.length > 0) { %>
      <form action="/users/address/select" method="POST" class="mb-6">
        <div class="mb-2 text-left font-semibold text-gray-700">Saved Addresses</div>
        <div class="space-y-2 mb-4">
          <% user.addresses.forEach(function(addr, idx) { %>
            <label class="block bg-green-50 border border-green-200 rounded-lg px-4 py-2 cursor-pointer hover:bg-green-100 transition">
              <input type="radio" name="selectedAddress" value="<%= idx %>" class="mr-2 align-middle" required>
              <span class="align-middle"><%= addr.address %>, <%= addr.city %>, <%= addr.state %> - <%= addr.zip %></span>
            </label>
          <% }) %>
        </div>
        <button type="submit" class="w-full bg-gradient-to-r from-green-400 via-yellow-400 to-pink-400 text-white font-bold py-2 rounded-xl shadow-lg hover:from-green-500 hover:to-pink-500 transition text-lg mb-2">Use Selected Address</button>
      </form>
      <div class="mb-4 text-gray-500 font-medium">Or add a new address</div>
    <% } %>
    <form action="/users/address" method="POST" class="space-y-4 text-left">
      <div>
        <label class="block text-gray-700 font-semibold mb-1">Street Address</label>
        <input type="text" name="address" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400" placeholder="123 Main St" required>
      </div>
      <div class="flex space-x-2">
        <div class="flex-1">
          <label class="block text-gray-700 font-semibold mb-1">City</label>
          <input type="text" name="city" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400" placeholder="City" required>
        </div>
        <div class="flex-1">
          <label class="block text-gray-700 font-semibold mb-1">State</label>
          <input type="text" name="state" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400" placeholder="State" required>
        </div>
      </div>
      <div>
        <label class="block text-gray-700 font-semibold mb-1">ZIP Code</label>
        <input type="text" name="zip" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-400" placeholder="ZIP Code" required>
      </div>
      <button type="submit" class="w-full bg-gradient-to-r from-green-400 via-yellow-400 to-pink-400 text-white font-bold py-2 rounded-xl shadow-lg hover:from-green-500 hover:to-pink-500 transition text-lg mt-4">Save New Address</button>
    </form>
  </div>
</div>
<%- include('./partials/footer') %> 