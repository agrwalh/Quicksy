<%- include('./partials/header', { cartCount: cartCount, categories: categories }) %>

    <style>
        .swiper-container {
            width: 100%;
            max-width: 600px;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 90%;
            height: 200px;
            background-color: #f0f0f0;
        }
    </style>

    <body class="bg-gray-100 font-sans">
        <div class="max-w-screen-lg mx-auto p-4">
            <!-- Hero Banner -->
            <div class="w-full max-w-screen-lg mx-auto mt-4 mb-6">
                <img src="/images/paan-corner-banner.jpg" alt="Paan Corner Banner" class="rounded-xl w-full object-cover shadow-lg">
            </div>
            <!-- Promo Cards -->
            <div class="max-w-screen-lg mx-auto grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                <div class="bg-cyan-500 rounded-xl p-6 flex flex-col items-start shadow text-white">
                    <div class="font-bold text-lg mb-2">Pharmacy at your doorstep!</div>
                    <div class="mb-4">Cough syrups, pain relief sprays & more</div>
                    <img src="/images/promo-pharmacy.jpg" alt="Pharmacy" class="w-full h-32 object-cover rounded-xl mb-4">
                    <a href="#" class="bg-white text-cyan-600 font-semibold px-4 py-2 rounded shadow hover:bg-cyan-100">Order Now</a>
                </div>
                <div class="bg-yellow-400 rounded-xl p-6 flex flex-col items-start shadow text-yellow-900">
                    <div class="font-bold text-lg mb-2">Pet Care supplies in minutes</div>
                    <div class="mb-4">Food, treats, toys & more</div>
                    <img src="/images/promo-petcare.jpg" alt="Pet Care" class="w-full h-32 object-cover rounded-xl mb-4">
                    <a href="#" class="bg-white text-yellow-700 font-semibold px-4 py-2 rounded shadow hover:bg-yellow-100">Order Now</a>
                </div>
                <div class="bg-blue-100 rounded-xl p-6 flex flex-col items-start shadow text-blue-900">
                    <div class="font-bold text-lg mb-2">No time for a diaper run?</div>
                    <div class="mb-4">Get baby care essentials in minutes</div>
                    <img src="/images/promo-babycare.jpg" alt="Baby Care" class="w-full h-32 object-cover rounded-xl mb-4">
                    <a href="#" class="bg-white text-blue-700 font-semibold px-4 py-2 rounded shadow hover:bg-blue-200">Order Now</a>
                </div>
            </div>

            <!-- Category Carousel -->
            <div class="max-w-screen-lg mx-auto mb-8 overflow-x-auto">
                <div class="flex space-x-4 pb-2">
                    <% categories.forEach(function(cat) { %>
                        <a href="/?category=<%= encodeURIComponent(cat.name) %>" class="flex flex-col items-center min-w-[110px] bg-white rounded-xl shadow p-3 hover:shadow-lg transition cursor-pointer">
                            <img src="/images/<%= cat.name.replace(/\s|,|&/g, '_').toLowerCase() %>.jpg" alt="<%= cat.name %>" class="h-10 w-10 rounded mb-2">
                            <span class="text-xs font-semibold text-gray-700 text-center"><%= cat.name %></span>
                        </a>
                    <% }) %>
                </div>
            </div>

            <!-- Order Now Section -->
            <div class="bg-white p-4 rounded-lg shadow mb-4">
                <div class="flex justify-between items-center">
                    <h2 class="text-lg font-semibold text-green-700">Order Now</h2>
                    <button class="text-yellow-500 font-semibold hover:underline">See all</button>
                </div>
                <div class="flex space-x-4 mt-4 overflow-x-auto pb-2">
                    <% rnproducts.forEach(function(elem){ %>
                        <div class="flex w-36 flex-shrink-0 flex-col items-center bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-2">
                            <div class="relative">
                                <img src="data:image/jpg;base64, <%= elem.image.toString('base64') %>" alt="<%= elem.name %>" class="h-24 rounded">
                            </div>
                            <p class="text-sm text-center mt-2 font-medium">
                                <%= elem.name %>
                            </p>
                            <p class="text-xs text-gray-400 line-through">₹<%= Number(elem.price)+20 %></p>
                            <p class="font-bold text-green-700">₹<%= elem.price %></p>
                            <a class="bg-green-700 text-white px-4 py-1 rounded mt-2 hover:bg-green-800 transition" href="/cart/add/<%= elem._id %>">ADD</a>
                        </div>
                    <%}) %>
                </div>
            </div>

            <!-- Offers Section -->
            <div class="swiper-container my-10 w-full overflow-hidden">
                <div class="swiper-wrapper">
                    <div class="swiper-slide rounded-xl overflow-hidden">
                        <a href="https://sheryians.com"><img class="w-full h-full object-cover"
                                src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg"
                                alt=""></a>
                    </div>
                    <div class="swiper-slide rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover"
                            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/pharmacy-WEB.jpg"
                            alt="">
                    </div>
                    <div class="swiper-slide rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover"
                            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg"
                            alt="">
                    </div>
                    <div class="swiper-slide rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover"
                            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg"
                            alt="">
                    </div>
                    <div class="swiper-slide rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover"
                            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg"
                            alt="">
                    </div>
                </div>
            </div>

            <!-- Grocery & Kitchen Section -->
            <% for(let key in products){ %>
                <div class="bg-white p-4 rounded-lg shadow mb-10">
                    <h2 class="text-lg font-semibold text-green-700">
                        <%= key %>
                    </h2>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-4">
                        <% products[key].forEach(elem=>{ %>
                            <div class="flex flex-col items-center bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-2">
                                <img src="data:image/jpg;base64, <%= elem.image.toString('base64') %>" alt="<%= elem.name %>" class="w-24 rounded">
                                <p class="text-sm text-center mt-2 font-medium">
                                    <%= elem.name %>
                                </p>
                                <a class="px-4 text-white text-xs rounded mt-2 inline-block py-1 bg-green-700 hover:bg-green-800 transition" href="/cart/add/<%= elem._id %>">ADD</a>
                            </div>
                        <%}) %>
                    </div>
                </div>
            <% } %>

            <% if(somethingInCart){ %>
                <div class="py-20"></div>
            <% } %>
            <!-- Cart Drawer Modal (only, no floating button) -->
            <div id="cartDrawer" class="fixed inset-0 bg-black bg-opacity-40 z-50 hidden">
                <div class="absolute right-0 top-0 h-full w-full max-w-md bg-white shadow-lg p-6 overflow-y-auto transition-transform transform translate-x-full" id="cartPanel">
                    <button id="closeCartBtn" class="absolute top-4 right-4 text-2xl">&times;</button>
                    <h2 class="text-xl font-bold mb-4">My Cart</h2>
                    <% if (typeof cart !== 'undefined' && cart.length > 0) { %>
                        <% cart.forEach(elem => { %>
                            <% if (elem.product && typeof elem.product === 'object' && elem.product.name) { %>
                                <div class="flex items-center mt-4">
                                    <img src="<% if (elem.product.image && typeof elem.product.image.toString === 'function') { %>data:image/jpg;base64, <%= elem.product.image.toString('base64') %><% } else { %>/images/quicksy.jpg<% } %>" alt="<%= elem.product ? elem.product.name : '' %>" class="w-16 h-16 rounded">
                                    <div class="ml-4">
                                        <p><%= elem.product.name %></p>
                                    </div>
                                    <div class="ml-auto">
                                        <div class="flex items-center justify-center bg-green-700 text-white rounded-md">
                                            <a href="/cart/remove/<%= elem.product._id %>" class="px-2 py-1 rounded"><i class="ri-subtract-line"></i></a>
                                            <p class="mx-2"><%= elem.quantity %></p>
                                            <a href="/cart/add/<%= elem.product._id %>" class="px-2 py-1 rounded"><i class="ri-add-line"></i></a>
                                        </div>
                                        <div class="flex gap-2 mt-4">
                                            <p class="text-gray-500 line-through">₹<%= Number(elem.product.price)*Number(elem.quantity)+20 %></p>
                                            <p>₹<%= Number(elem.product.price)*Number(elem.quantity)%></p>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% }) %>
                        <div class="mt-6 flex flex-col gap-2">
                            <a href="/cart" class="bg-green-700 text-white px-6 py-2 rounded-lg hover:bg-green-800 text-center">Proceed to Pay</a>
                            <button id="continueShoppingBtn" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300 text-center">Continue Shopping</button>
                        </div>
                    <% } else { %>
                        <div class="text-gray-500">Your cart is empty.</div>
                    <% } %>
                </div>
            </div>
        </div>

        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script>
            var swiper = new Swiper('.swiper-container', {
                effect: 'coverflow',
                grabCursor: true,
                centeredSlides: true,
                slidesPerView: 'auto',
                coverflowEffect: {
                    rotate: 10,
                    stretch: 0,
                    depth: 10,
                    modifier: 1,
                    slideShadows: true,
                },
                loop: true,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
            });
        </script>
        <script>
            // Save the scroll position to localStorage
            window.addEventListener('scroll', function () {
                localStorage.setItem('scrollPosition', window.scrollY);
            });

            // Restore the scroll position from localStorage
            window.addEventListener('load', function () {
                const scrollPosition = localStorage.getItem('scrollPosition');
                if (scrollPosition) {
                    window.scrollTo(0, scrollPosition);
                }
            });
        </script>
        <script>
            const openCartBtn = document.getElementById('openCartBtn');
            const headerCartBtn = document.getElementById('headerCartBtn');
            const cartDrawer = document.getElementById('cartDrawer');
            const cartPanel = document.getElementById('cartPanel');
            const closeCartBtn = document.getElementById('closeCartBtn');
            const continueShoppingBtn = document.getElementById('continueShoppingBtn');

            if (openCartBtn) {
                openCartBtn.addEventListener('click', () => {
                    cartDrawer.classList.remove('hidden');
                    cartPanel.classList.remove('translate-x-full');
                });
            }
            if (headerCartBtn) {
                headerCartBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    cartDrawer.classList.remove('hidden');
                    cartPanel.classList.remove('translate-x-full');
                });
            }
            if (closeCartBtn) {
                closeCartBtn.addEventListener('click', () => {
                    cartDrawer.classList.add('hidden');
                    cartPanel.classList.add('translate-x-full');
                });
            }
            if (cartDrawer) {
                cartDrawer.addEventListener('click', (e) => {
                    if (e.target === cartDrawer) {
                        cartDrawer.classList.add('hidden');
                        cartPanel.classList.add('translate-x-full');
                    }
                });
            }
            if (continueShoppingBtn) {
                continueShoppingBtn.addEventListener('click', () => {
                    cartDrawer.classList.add('hidden');
                    cartPanel.classList.add('translate-x-full');
                });
            }
        </script>
    </body>
    <%- include('./partials/footer'); %>